@model Repuestos_Araucania.Models.Productos.ProductosList

@{
    ViewBag.Title = "Buscar por Nombre";
}

<h2>Busqueda por Nombre</h2>

<table class="table">
    <tr>
        <td>
            @using (Html.BeginForm("BuscarNombre", "Filtro", FormMethod.Get))
            {
            <td>
                <strong>
                    Buscar por NOMBRE @Html.TextBox("NOMBRE", "", new { @class = "form-control", autofocus = "autofocus" })
                </strong>
            </td>
            }
            @using (Html.BeginForm("BuscarCódigo", "Filtro", FormMethod.Get))
            {
                <td>
                    <strong>
                        Buscar por CÓDIGO @Html.TextBox("CÓDIGO", "", new { @class = "form-control" })
                    </strong>
                </td>
            }
            <td>
            <td>
            <td></td>
        </tr>
    </table>
    <p class="btn btn-default">@Html.ActionLink("Ir a Inicio", "Index")</p>
    <p class="btn btn-default">@Html.ActionLink("Volver", "Volver")</p>

    @using (Html.BeginForm("Seleccion", "Filtro"))
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("ID")
                </th>
                <th>
                    @Html.DisplayName("CÓDIGO")
                </th>
                <th>
                    @Html.DisplayName("NOMBRE")
                </th>
                <th>
                    @Html.DisplayName("MARCAR")
                </th>
                <th>
                    @Html.DisplayName("PRECIO")
                </th>
                <th>
                    @Html.DisplayName("STOCK")
                </th>
                <th></th>
            </tr>

            @for (var i = 0; i < Model.product.Count; i++)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(x => Model.product[i].ID)
                    </td>
                    <td>
                        @Html.DisplayFor(x => Model.product[i].CÓDIGO)
                    </td>
                    <td>
                        @Html.DisplayFor(x => Model.product[i].NOMBRE)
                    </td>
                    <td>
                        @Html.CheckBoxFor(x => Model.product[i].MARCAR)
                    </td>
                    <td>
                        @Html.DisplayFor(x => Model.product[i].PRECIO)
                    </td>
                    <td>
                        @Html.DisplayFor(x => Model.product[i].STOCK)
                    </td>
                    <td>
                        @Html.ActionLink("Detalles", "Details", new { id = Model.product[i].ID })
                    </td>
                </tr>
                @Html.HiddenFor(x => Model.product[i].NOMBRE)
            }

        </table>

        <div>
            <input type="submit" value="ACEPTAR" name="valor" />
        </div>
    }